extends layouts/main-layout.pug

block content
    //- script(src="/sendMessage.js")
    h1 #{team.name}
    h2 Owner: #{team.leader.username}

    h2 Messages
    div(name='messages')
        each message in messages
            p
                strong #{message.author.username}
                | : #{message.content}
    form(action=`/teams/${team._id}/send`, method='POST')
        input(type="text", name="content")
        input(type="submit", value="Send")